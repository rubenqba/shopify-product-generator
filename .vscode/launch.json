  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run start:dev",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Docker service",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker compose up --build",
      "env": {}
    }
  ],
  "debug.javascript.terminalOptions": {
    "skipFiles": ["<node_internals>/**"]
  }
}
